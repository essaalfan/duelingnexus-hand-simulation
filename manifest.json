{
  "name": "DuelingNexus Tools â€“ Start-Hand Simulator & Replay Deck Downloader",
  "description": "Enhances DuelingNexus with a Start-Hand simulator and replay deck downloader",
  "version": "1.0.6",
  "manifest_version": 3,
  "host_permissions": [
    "*://duelingnexus.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "/images/dnx16.png",
      "32": "/images/dnx32.png",
      "48": "/images/dnx48.png",
      "128": "/images/dnx128.png"
    }
  },
  "icons": {
    "16": "/images/dnx16.png",
    "32": "/images/dnx32.png",
    "48": "/images/dnx48.png",
    "128": "/images/dnx128.png"
  },
  "content_scripts" : [
    {
        "js" : ["vendor/sweetalert2/sweetalert2.min.js","init.js"],
        "css": ["vendor/sweetalert2/sweetalert2.min.css"],
        "matches" : ["*://duelingnexus.com/editor/*"],
        "run_at": "document_end"
    },
    {
        "js" : ["vendor/sweetalert2/sweetalert2.min.js","replay.js"],
        "css": ["vendor/sweetalert2/sweetalert2.min.css"],
        "matches" : ["*://duelingnexus.com/replay/*"],
        "run_at": "document_end",
        "world": "MAIN",
        "all_frames": true
    }
  ]
}
